{
  "extends": ["next/core-web-vitals", "plugin:storybook/recommended", "plugin:import/recommended"],
  "rules": {
    "import/order": [
      "error",
      {
        "groups": ["type", "builtin", "external", "internal", "parent", "sibling", "index", "unknown"],
        "pathGroups": [
          {
            "pattern": "react*",
            "group": "external",
            "position": "before"
          }
        ]
      }
    ]
  }
}
